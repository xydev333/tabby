{
  "extends": [
    "tslint-eslint-rules",
    "tslint-config-standard"
  ],
  "rules": {
    "radix": false,
    "indent": [
      true,
      "spaces"
    ],
    "ter-indent": [true, 4],
    "prefer-const": true,
    "trailing-comma": [
      true,
      {
        "singleline": "never"
      }
    ]
  }
}
